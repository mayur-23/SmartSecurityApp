<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_type_select"
    android:background="@drawable/login_or_bg">

    <Button
        android:id="@+id/btn_studentLogin"
        android:layout_width="185dp"
        android:layout_height="62dp"
        android:layout_marginTop="416dp"
        android:background="@drawable/button"
        android:text="Student"
        android:textAllCaps="false"
        android:textColor="#253B75"
        android:textSize="30sp"
        app:backgroundTint="#FEA928"
        app:cornerRadius="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/yugothb1"
        android:text="OR"
        android:textColor="#707070"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_studentLogin" />

    <Button
        android:id="@+id/btn_institute"
        android:layout_width="185dp"
        android:layout_height="62dp"
        android:background="@drawable/button"
        android:text="Institute"
        android:textAllCaps="false"
        android:textColor="#253B75"
        android:textSize="30sp"
        app:backgroundTint="#FEA928"
        app:cornerRadius="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_or" />

</androidx.constraintlayout.widget.ConstraintLayout>